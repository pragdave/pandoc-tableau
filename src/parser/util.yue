import "inspect"

---------------------------------------------------------------------------------
export trim = (str) ->
  str  
  |> string.gsub("^%s+", "")
  |> string.gsub("%s+$", "")



---------------------------------------------------------------------------------
export split = (str, delim = "%s+", maxNb = 0) ->
  -- Eliminate bad cases...
  if string.find(str, delim) == nil then
    return { str }

  local result = {}
  local epos = "cat"

  for substr,pos in string.gmatch(str, "(.-)#{delim}()")
    epos = pos
    result[] = substr
    

  if epos < string.len(str)
    result[] = string.sub(str, epos)

  result

---------------------------------------------------------------------------------
export dump = (value, label=nil) ->
  if label
    print "\nvvv #{label}"
  
  value |> inspect |> print 

  if label
    print "^^^\n"

  value

---------------------------------------------------------------------------------
export expect = (parse_step, text, msg="Syntax error in table specification") ->
  parse_step(text) or text\parse_error(msg)


